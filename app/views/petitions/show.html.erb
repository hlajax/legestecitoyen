	<%=render'menus/menu' %>
	<div class="container-fluid m-top-mini">
		<div class="row">
			<%=render 'menus/fmenu'%>
				<div class="col-lg-8 col-12">
								<div class="row">
					<div class="col-lg-8 offset-lg-2 m-top-xs">
						<img class="img-fluid m-bottom-mini" src="https://res.cloudinary.com/aseed/image/upload/v1569888266/EBEN_RADIO-26012016-4_OK_z7pyvc.jpg">
					</div>
					

	</div>
					<div class="row">
						<div class="col-lg-12 col-12"><h2 class="text-center text-maj"><%= @petition.titre %></h2></div>
				<div class="col-lg-6 col-12 m-top-mini">
						<%= image_tag @petition.image.url, class:"img-fluid"%>
				</div>
				<div class="col-lg-6 col-12 m-top-mini">
						<p>Pétition initiée par <span class="text-bold text-cap"><%= @petition.citoyen.nom%></span></p>
						<p>Catégorie : <%= @petition.petition_cat.titre%></p>
						<p><span class="text-bold text-cap"><%=@petition.votes_for.size%></span> signature(s) pour cette pétition</p>
						   <% if citoyen_signed_in?%>
                             <%= link_to "Signer la pétition", like_petition_path(@petition),class:"btn btn-geste btn-block text-bold text-maj", method: :put %>
      					<% else %>
      					<li class="nav-item d-xl-block d-lg-block d-md-block">
                               <p class="alert alert-danger"> <span class="text-bold small">Vous devez être connecté pour signer cette pétition </span>
                                <%=link_to "Se connecter", new_citoyen_session_path, class:"btn btn-geste btn-sm"%>
                                </p>
                            </li>
      				<%end %>
						
				</div>
				<div class="col-lg-12 col-12">
						<div class="contenu"><%= raw(@petition.contenu) %></div>
												<div class="jumbotron">
  							<div class="row">
  								<div class="col-lg-8 col-12">
  										<h2 class="display-5">Lancez une pétition!</h2>
  							<p class="lead">
  											La personne qui a lancé cette pétition a décidé d'agir. Ferez-vous la même chose ?
							</p>
  							
  								</div>
  								
  								<div class="col-lg-4 col-12">
  							<%= link_to 'Lancer une pétition', new_petition_path, class:"btn btn-geste" %>
  								</div>
  								
  							</div>
						</div>
				</div>
					</div>
				</div>
				<%=render 'menus/smenu'%>
		</div>
</div>
<%if administrateur_signed_in?%>
<%= link_to 'Edit', edit_petition_path(@petition) %> |
<%= link_to 'Back', petitions_path %>
<% end %>
