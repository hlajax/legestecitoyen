<p id="notice"><%= notice %></p>

<h1>Actualites</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th>Image</th>
      <th>Category</th>
      <th>Administrateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actualites.each do |actualite| %>
      <tr>
        <td><%= actualite.titre %></td>
        <td><%= actualite.contenu %></td>
        <td><%= actualite.image %></td>
        <td><%= actualite.category_id %></td>
        <td><%= actualite.administrateur_id %></td>
        <td><%= link_to 'Show', actualite %></td>
        <td><%= link_to 'Edit', edit_actualite_path(actualite) %></td>
        <td><%= link_to 'Destroy', actualite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actualite', new_actualite_path %>
