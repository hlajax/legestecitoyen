<%= render 'menus/menu'%>
<div class="container">
	<div class="row">
		<div class="col-lg-10 offset-lg-1 col-12 m-top-mini">
			<div class="row">
				<div class="col-lg-6 col-12 zepad-titre">
					<h1 class="big-titre"><strong><%= @actualite.titre %></strong></h1>
					<p class="text-maj"><%= @actualite.category.titre%></p>
					<p><i><%= @actualite.administrateur.email %></i></p>
				</div>
				<div class="col-lg-6 col-12">
					<%= image_tag @actualite.image.url,class:"img-fluid"%>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12 col-12 contenu">
						<%= raw(@actualite.contenu) %>
				</div>
			</div>
		</div>
	</div>
</div>
<%= link_to 'Edit', edit_actualite_path(@actualite) %> |
<%= link_to 'Back', actualites_path %>
